<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Dias, une solution pour l'Afrique" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Dias" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>

    <% if user_signed_in? %>
       <div class="container">
         <%= render 'layouts/messages' %>
       </div>
          <div class="container">
            <%= yield %>
          </div>
        
        <% else %>
           <div class="container">
              <%= render 'layouts/messages' %>
          </div>
          <%= yield %>
          <% end %>

     </div>
    </main>
  </body>
</html>
