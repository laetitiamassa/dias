
<div class="row">
      <ul class="thumbnails list-unstyled">
<% @projects.each do |project| %>

  
        <li class="col-md-3">
          <div class="thumbnail" style="padding: 0">
            <div style="padding:4px">
              <img alt="300x200" style="width: 200%" src="http://placehold.it/200x150">
            </div>
            <div class="caption">
              <p class="lead"><%= link_to truncate(project.title, :length => 23), project %></p>
              <p>par <%= project.user.name %></p>
              
              <p class="text-right"><i class="glyphicon glyphicon-map-marker"></i><%= project.country %></p>
            </div>
            <div class="modal-footer" style="text-align: left">
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                    <span class="sr-only">60% Complete</span>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4"><b>60%</b><br/><small>financ√©</small></div>
                <div class="col-md-4"><b>$<%= project.funding %></b><br/><small>requis</small></div>
                <div class="col-md-4"><b>18</b><br/><small>jours</small></div>
              </div>

                <!-- <% if @user == project.user %>
        <%= link_to 'Editer', edit_project_path(project) %>
         <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %> -->

            </div>
          </div>
        </li>


     
        
      

    <% end %>

</ul>
</div>






