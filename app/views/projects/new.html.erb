<div class="page-header">
  <h1>Créer un nouveau projet</h1>
</div>

<div class="col-md-2">
<div class="alert alert-info alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p><strong>Attention !</strong> Tous les champs doivent être remplis</p>
</div>
</div>

<div class="col-md-8">
<%= simple_form_for(@project, :url => projects_path, :html => { :multipart => true }) do |f| %>

  <!-- <%= f.error_notification %> -->

  <div class="form-inputs">
  	<div class="form-group">
      <%= f.label :title, "Titre du projet" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :cover, "Illustration du projet" %>
      <%= f.file_field :cover, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description du projet" %>
      <%= f.text_area :description, rows: "7", class: 'form-control' %>
    </div>
<div class="row">
    <div class="form-group col-md-6">
      <%= f.label :pays, "Pays où sera réalisé le projet" %>
      <%= f.text_field :pays, class: 'form-control' %>
    </div>
  	
  	<div class="form-group col-md-6">
      <%= f.label :sector, "Secteur" %>
      <%= f.text_field :sector, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :budget, "Montant total à financer" %>
      <div class="input-group"><%= f.text_field :budget, class: 'form-control' %><span class="input-group-addon">€</span></div>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :funding, "Contribution individuelle demandée" %>
      <div class="input-group"><%= f.text_field :funding, class: 'form-control' %><span class="input-group-addon">€ / contributeur</span></div>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :deadline, "Date limite de contribution" %>
      <%= f.datetime_select :deadline, class: 'form-control input-lg' %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.submit "Créer le projet", class: "btn btn-warning btn-lg" %>
  </div>
<% end %>

</div>
